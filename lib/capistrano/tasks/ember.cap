namespace :npm do
  desc 'Install bower'
  task :install do
    on roles(:app) do
      within release_path do
        with rails_env: fetch(:rails_env) do
          rake 'npm:install'
        end
      end
    end
  end
end

namespace :bower do
  desc 'Install bower packages'
  task :install do
    on roles(:app) do
      within release_path do
        with rails_env: fetch(:rails_env) do
          rake 'bower:install'
        end
      end
    end
  end
end
