<%
  div_class = "aside-container rollover-fixed"
  if current_page == :preview_list
    div_class = "preview-list-aside " + div_class
  end
%>
<div class="<%= div_class %>">
  <% if current_page == :preview_list %>
    <form class="preview-list-aside-form" action="/reports/generate" method="get">
      <input id="create-report-submit" class="button" type="submit" value="Create Report" />
      <span class="btn-arrow"></span>
    </form>
  <% else %>
    <form class="preview-list-aside-form" action="/preview" method="get">
      <input id="preview-list-submit" class="preview-list-count preview-list-submit button" type="submit" value="Preview List" name="" />
      <span class="btn-arrow"></span>
    </form>
  <% end %>
  <p>Add more works</p>
  <ul class="add-work-links">
    <% if request.query_parameters().key?("unformattedQueryId") %>
      <li>
        <%= link_to 'Search Again', search_advanced_path(params), class: "work-links" %>
      </li>
    <% else %>
      <li><a href="/" class="work-links">Search Again</a></li>
    <% end %>

    <% if current_page != :doi_pmid %>
      <li><a href="/id/" class="work-links">By DOI/PMID</a></li>
    <% end %>
    <% if current_page != :upload %>
      <li><a href="/upload" class="work-links">Upload File</a></li>
    <% end %>
    <li><a href="/start-over" class="work-links">Start Over</a></li>
  </ul>
</div>
